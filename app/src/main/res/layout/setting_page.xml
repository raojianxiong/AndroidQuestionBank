<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/actionbar_bg"
        app:navigationIcon="@mipmap/ic_arrow_back_white_24dp"
        app:title="设置">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="通用"
        android:textColor="@android:color/primary_text_light"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
        android:padding="2dp" />

    <TextView
        android:id="@+id/setting_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="昵称设置"
        android:textColor="@android:color/primary_text_light"
        android:textSize="22sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:padding="2dp" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                android:text="自动登录"
                android:textSize="22sp" />

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/login_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已开启" />
        </LinearLayout>
        <CheckBox
            android:checked="true"
            android:id="@+id/cb_login_auto"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
        android:padding="2dp" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                android:text="显示图片"
                android:textSize="22sp" />

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/show_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在3G/4G和WIFI下都显示图片" />
        </LinearLayout>
        <CheckBox
            android:checked="true"
            android:id="@+id/cb_show_photo"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="其他"
        android:textColor="@android:color/primary_text_light"
        android:textSize="18sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
        android:padding="2dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/quit_login"
        android:text="退出登录"
        android:layout_marginLeft="15dp"
        android:textSize="22sp"
        android:textColor="@android:color/primary_text_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:padding="2dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/delete_cache"
        android:text="清除缓存"
        android:layout_marginLeft="15dp"
        android:textSize="22sp"
        android:textColor="@android:color/primary_text_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:padding="2dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/about_us"
        android:text="关于我们"
        android:layout_marginLeft="15dp"
        android:textSize="22sp"
        android:textColor="@android:color/primary_text_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>